<!DOCTYPE html>
<html>

<head>
    <title>Create Unique Asset</title>
    <link rel="shortcut icon" href="/images/upload.svg" type="image/x-icon">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style_nft.css' />
    <script src="/javascripts/loadimg_nft.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 800px;
            margin-top: 50px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            font-weight: bold;
        }

        .image-preview img {
            display: block;
            max-width: 100%;
            height: auto;
            margin-top: 10px;
        }

        .image-preview {
            border: 1px solid #ddd;
            padding: 10px;
            border-radius: 5px;
        }

        .btn-outline-danger {
            width: 100%;
        }

        .row {
            margin-top: 20px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .form-group {
                margin-bottom: 15px;
            }

            .btn-outline-danger {
                width: 100%;
            }
        }
    </style>
</head>

<body>
    <%- include('../../inc/top.ejs') %>  
    <div class="container">
        <h1 class="my-4 text-center">Create Unique Asset</h1>
        <form action="" method="post">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <input type="text" class="form-control" id="description" name="description" required>
            </div>
            <div class="form-group">
                <label for="imageUrl">Image URL:</label>
                <div class="row">
                    <div class="col-12 col-md-6">
                        <input type="text" class="form-control" id="imageUrl" name="imageUrl" oninput="updateImagePreview()" required>
                    </div>
                    <div class="col-12 col-md-6 d-flex align-items-center">
                        <div class="image-preview" style="width: 100%; height: auto;">
                            <img id="imagePreview" src="" alt="Image Preview" class="img-fluid" style="max-width: 100%; height: auto; display: none;">
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="collectionId">Collection ID:</label>
                <input type="text" class="form-control" id="collectionId" name="collectionId" required>
            </div>
            <div class="row">
                <div class="form-group col-12 col-md-6">
                    <label for="traitType">Trait Type:</label>
                    <input type="text" class="form-control" id="traitType" name="traitType" required>
                </div>
                <div class="form-group col-12 col-md-6">
                    <label for="value">Value:</label>
                    <input type="text" class="form-control" id="value" name="value" required>
                </div>
            </div>
            <button type="submit" class="btn btn-outline-danger">Create</button>
        </form>
    </div>

    <script>
        function updateImagePreview() {
            const imageUrl = document.getElementById('imageUrl').value;
            const imagePreview = document.getElementById('imagePreview');
            if (imageUrl) {
                imagePreview.src = imageUrl;
                imagePreview.style.display = 'block';
            } else {
                imagePreview.style.display = 'none';
            }
        }
    </script>
</body>

</html>
